@model ImageServerWeb.Models.HomePageModel
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/bootstrap-journal.css" rel="stylesheet" type="text/css" />

<div  class="card text-white bg-primary mb-3" style="max-width: 20rem;float: left">
    <div class="card-header">Header</div>
    <div class="card-body">
        <h4 class="card-title">Etc :</h4>
        <p class="card-text" style="white-space: pre-line">@Model.Etc</p>
    </div>
</div>

<div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
    <div class="card-header">Header</div>
    <div class="card-body">
        <h4 class="card-title">Primary card title</h4>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
</div>

<div class="card text-white bg-info mb-3" style="max-width: 20rem; margin-left: 45px; float: left">
    <div class="card-header">Header</div>
    <div class="card-body">
        <h4 class="card-title">Image Service Status:</h4>
        <p class="card-text">@Model.Status</p>
    </div>
</div>

<div class="card text-white bg-warning mb-3" style = "max-width: 20rem; margin-left: 45px;">
    <div class="card-header">Header</div>
    <div class="card-body">
        <h4 class="card-title">Number Of Photos:</h4>
        <p class="card-text">@Model.NumOfImages</p>
    </div>
</div>

