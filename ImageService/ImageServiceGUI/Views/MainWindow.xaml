<Window x:Class="ImageServiceGUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ImageServiceGUI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <TextBlock Padding="200">
            <TextBlock.Style>
                <Style TargetType="TextBlock">

                    <Setter Property="Background" Value="White" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding VM_Connect}"
                             Value="False">
                            <Setter Property="Background" Value="Gray" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TabControl TabStripPlacement="Top" VerticalAlignment= "Stretch">
            <TabItem Header="Settings">
                <views:Settings/>
            </TabItem>

            <TabItem Header="Logs">
                <views:Logs/>
            </TabItem>
            
        </TabControl>
        
        
    </Grid>
</Window>